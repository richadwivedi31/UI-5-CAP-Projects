<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" id="editDialogBox">
    <Dialog id="editDialog1" title="Edit Product Details" contentWidth="400px" contentHeight="auto" draggable="true">
        <content>
            <f:SimpleForm id="form2" editable="true" layout="ResponsiveGridLayout" singleContainerFullSize="false">
                <f:content>
                    <Label id="Manufacturer" text="{i18n>Manufacturer}" />
                    <Input id="iManufacturerInput" value="{Manufacturer}" />

                    <Label id="Model_Name" text="{i18n>Model_Name}" />
                    <Input id="Model_NameInput" value="{Model_Name}" />

                    <Label id="Category" text="{i18n>Category}" />
                    <Input id="CategoryInput" value="{Category}" />

                    <Label id="Screen_Size" text="{i18n>Screen_Size}" />
                    <Input id="Screen_SizeInput" value="{Screen_Size}" />

                    <Label id="Screen" text="{i18n>Screen}" />
                    <Input id="ScreenInput" value="{Screen}" />

                    <Label id="CPU" text="{i18n>CPU}" />
                    <Input id="CPUInput" value="{CPU}" />

                    <Label id="RAM" text="{i18n>RAM}" />
                    <Input id="RAMInput" value="{RAM}" />

                    <Label id="Storage" text="{i18n>Storage}" />
                    <Input id="StorageInput" value="{Storage}" />

                    <Label id="GPU" text="{i18n>GPU}" />
                    <Input id="GPUInput" value="{GPU}" />

                    <Label id="Operating_System" text="{i18n>Operating_System}" />
                    <Input id="Operating_SystemInput" value="{Operating_System}" />

                    <Label id="Operating_System_Version" text="{i18n>Operating_System_Version}" />
                    <Input id="Operating_System_VersionInput" value="{Operating_System_Version}" />

                    <Label id="Weight" text="{i18n>Weight}" />
                    <Input id="WeightInput" value="{Weight}" />

                    <Label id="Price_In_Euros" text="{i18n>Price_In_Euros}" />
                    <Input id="Price_In_EurosInput" value="{Price_In_Euros}"  />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button id="saveChangesButton" text="save" press=".onPressSave"></Button>
        </beginButton>
        
        <endButton>
            <Button id="cancelChangesButton"  text="Close" press=".onPressCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
